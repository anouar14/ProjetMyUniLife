{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <div class="container">
        <h1>Réinitialisation du mot de passe</h1>
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        <form method="POST" action="{{ path('app_reset_password', {'token': token}) }}">
            <div class="form-group">
                <label for="Password">Nouveau mot de passe</label>
<input type="password" id="new_password" name="new_password" required class="form-control" placeholder="Entrez votre nouveau mot de passe" />
            </div>
            <button type="submit" class="btn btn-primary">Réinitialiser le mot de passe</button>
        </form>
    </div>
{% endblock %}
