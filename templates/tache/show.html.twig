{% extends 'base.html.twig' %}

{% block title %}Tache{% endblock %}

{% block body %}
    <h1>Tache</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tache.id }}</td>
            </tr>
            <tr>
                <th>NomT</th>
                <td>{{ tache.nomT }}</td>
            </tr>
            <tr>
                <th>DesT</th>
                <td>{{ tache.desT }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ tache.dateDebut ? tache.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ tache.dateFin ? tache.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>TimeOn</th>
                <td>{{ tache.timeOn ? tache.timeOn|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>TimeOut</th>
                <td>{{ tache.timeOut ? tache.timeOut|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>StatutT</th>
                <td>{{ tache.statutT ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_tache_index') }}">back to list</a>

    <a href="{{ path('app_tache_edit', {'id': tache.id}) }}">edit</a>

    {{ include('tache/_delete_form.html.twig') }}
{% endblock %}
