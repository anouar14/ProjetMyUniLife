{% extends 'base.html.twig' %}

{% block title %}Liste des Préférences{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="card" style="margin-top: 100px;">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="mb-0">Liste des Préférences</h1>
                    <a href="{{ path('app_preference_new') }}" class="btn btn-success">
                        <i class="fas fa-plus"></i> Créer une nouvelle préférence
                    </a>
                </div>
            </div>
            <div class="card-body">
                {% if preferences is not empty %}
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                            <tr>
                                <th>
                                    <a href="{{ path('app_preference_index', { sort: 'id' }) }}">Id</a>
                                </th>
                                <th>Type</th>
                                <th>Disponibilité</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for preference in preferences %}
                                <tr>
                                    <td>{{ preference.id }}</td>
                                    <td>{{ preference.typePr }}</td>
                                    <td>{{ preference.disponibiliteAC ? preference.disponibiliteAC|date('Y-m-d H:i') : 'Non définie' }}</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('app_preference_show', {'id': preference.id}) }}" class="btn btn-sm btn-info">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                            <a href="{{ path('app_preference_edit', {'id': preference.id}) }}" class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="alert alert-info text-center" role="alert">
                        Aucune préférence trouvée
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}